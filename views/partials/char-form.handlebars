{{#if loggedIn}}
<form>
    <div class='form-group'>
      <label for='exampleFormControlSelect2'>Please select your character's
        setting!</label>
      <select multiple class='form-control' id='charsetting'>
        <button>Fantasy</button>
        <button>Science Fiction</button>
        <button>Other</button>
      </select>
    </div>
    <div class='form-group'>
      <label for='exampleFormControlTextarea1'>If you selected 'other' please
        list the setting below.</label>
      <textarea
        class='form-control'
        id='settingadditional'
        rows='3'
      ></textarea>
    </div>
    <div class='form-group'>
      <label for='exampleFormControlTextarea1'>What is your character's gender?</label>
      <input type="text" class="form-input" id="gender" placeholder="Please enter a gender"></textarea>
    </div>
    <div class='form-group'>
      <label for='exampleFormControlTextarea1'>What race is your character?</label>
      <select class="form-select" id="race"> 
        <option selected>Choose your race</option>
        <option value="1">Race 1</option>
        <option value="2">Race 2</option>
        <option value="3">Race 3</option>
      </select>
    </div>
    <div class='form-group'>
      <label for='exampleFormControlTextarea1'>What class is your character?</label>
      <select class="form-select" id="class"> 
        <option selected>Choose your class</option>
        <option value="1">Class 1</option>
        <option value="2">Class 2</option>
        <option value="3">Class 3</option>
      </select>
    </div>
    <div class='form-group' >
      <label for='exampleFormControlSelect2'>What is your character's eye color?</label>
      <select class="form-select" id="eye-color">
        <option selected>Choose your eye color</option>
        <option value="1">Blue</option>
        <option value="2">Green</option>
        <option value="3">Brown</option>
        <option value="4">Hazel</option>
        <option value="5">Purple</option>
        <option value="6">Red</option>
        <option value="7">Black</option>
        <option value="8">Yellow</option>
        <option value="9">Gray</option>
      </select>
    </div>
    <div class='form-group'>
      <label for='exampleFormControlSelect2'>What is your character's hair color?</label>
      <select class="form-select" id="hair-color">
        <option selected>Choose your hair color</option>
        <option value="1">Blue</option>
        <option value="2">Green</option>
        <option value="3">Brown</option>
        <option value="4">Blonde</option>
        <option value="5">Purple</option>
        <option value="6">Red</option>
        <option value="7">Black</option>
        <option value="8">White</option>
        <option value="9">Gray</option>
        <option value="10">Bald</option>
      </select>
    </div>
    <input type="submit" class="btn btn-danger" id="submitBtn" value="Discover your character"> 
    </form>

    
  {{/if}}
<script src='/js/char-form.js'></script>
