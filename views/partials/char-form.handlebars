{{#if loggedIn}}
<form>
    <div class='form-group'>
      <label for='exampleFormControlSelect2'>Please select your character's
        setting!</label>
      <select multiple class='form-control' id='exampleFormControlSelect2'>
        <button>Fantasy</button>
        <button>Science Fiction</button>
        <button>Other</button>
      </select>
    </div>
    <div class='form-group'>
      <label for='exampleFormControlTextarea1'>If you selected 'other' please
        list the setting below.</label>
      <textarea
        class='form-control'
        id='exampleFormControlTextarea1'
        rows='3'
      ></textarea>
    </div>
    <div class='form-group'>
      <label for='exampleFormControlTextarea1'>Please list your character's
        gender</label>
      <textarea
        class='form-control'
        id='exampleFormControlTextarea1'
        rows='3'
      ></textarea>
    </div>
    <div class='form-group'>
      <label for='exampleFormControlTextarea1'>What race is your character?</label>
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Choose your race
        </button>
        <ul class="dropdown-menu">
          <li>Race 1</li>
          <li>Race 2</li>
          <li>Race 3</li>
      </div>
    </div>
    <div class='form-group'>
      <label for='exampleFormControlSelect2'>What is your character's eye color?</label>
      <select multiple class='form-control' id='exampleFormControlSelect2'>
        <button>Blue</button>
        <button>Green</button>
        <button>Brown</button>
        <button>Hazel</button>
        <button>Purple</button>
      </select>
    </div>
    <div class='form-group'>
      <label for='exampleFormControlSelect2'>What is your character's hair
        color?</label>
      <select multiple class='form-control' id='exampleFormControlSelect2'>
        <button>Brown</button>
        <button>Black</button>
        <button>Blonde</button>
        <button>Gray</button>
        <button>White</button>
        <button>Bald</button>
      </select>
    </div>
    <a href='/output' onclick='loadOutput()'><button class='gencharbutton'>Build New
        Character</button></a>
</form>
<script>function loadOutput() { window.location.href = '/output'; }</script>
  {{/if}}
